<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication.MainWindow"
        Title="AvaloniaApplication">

  <DataGrid Name="dataGrid" Margin="12" IsReadOnly="True">
    <DataGrid.Columns>
      <DataGridTextColumn Header="Country" Binding="{Binding Name}" Width="300" />
      <DataGridTextColumn Header="Region" Binding="{Binding Region}" Width="300" />
      <DataGridTextColumn Header="Population" Binding="{Binding Population}" Width="300" />
      <DataGridTextColumn Header="Area" Binding="{Binding Area}" Width="300" />
      <DataGridTextColumn Header="GDP" Binding="{Binding GDP}" Width="300" />
      <DataGridTextColumn Header="Net Migration" Binding="{Binding NetMigration}" Width="300" />
      <DataGridTextColumn Header="Birth Rate" Binding="{Binding BirthRate}" Width="300" />
      <DataGridTextColumn Header="Death Rate" Binding="{Binding DeathRate}" Width="300" />
      <DataGridTextColumn Header="Infant Mortality" Binding="{Binding InfantMortality}" Width="300" />
    </DataGrid.Columns>
  </DataGrid>
</Window>